<% if !@subscription.blank? %>
<div class="card mt-2">
	<div class="card-header">
		<h3>Subscription</h3>
	</div>	

	<div class="row">
		<div class="col-md-4">
			<div class="grid p-4">
				<p>
					<strong> Plan Id</strong>
					<%= @subscription.stripe_plna_id%>
				</p>

				<p>
					<strong>Subscrition Id</strong>
					<%= @subscription.stripe_subscription_id%>
				</p>

				<p>
					<strong>Trial</strong>
					<%= @subscription.is_trial%>
				</p>

				<p>
					<strong>Trial Expire Date</strong>
					<%= @subscription.trial_expire_at%>
				</p>	

				<p>
					<strong>Plan Expire Date</strong>
					<%= @subscription.plan_expires_at%>
				</p>
		  	
		  	<p>
					<strong>Status</strong>
					<%= @subscription.status%>
				</p>
			</div>
		</div>
	</div>
</div>
<% else %>
	<p class="pt-5 pl-2">no subscrition here!</p>
<% end %>